{
  "name": "ucan-kms",
  "version": "0.1.0",
  "description": "UCAN-based Key Management Service",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "main": "src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "npm run type-check && npm run test:unit",
    "test:unit": "mocha \"test/**/*.spec.js\"",
    "test:coverage": "c8 --reporter=html --reporter=text mocha \"test/**/*.spec.js\"",
    "test:watch": "mocha \"test/**/*.spec.js\" --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build": "esbuild --bundle src/index.js --format=esm --external:cloudflare:workers --external:node:buffer --external:node:events --external:node:async_hooks --external:node:util --external:node:process --external:node:fs --external:node:path --external:node:crypto --external:node:assert --external:node:os --external:node:url --sourcemap --minify --outfile=dist/worker.mjs && npm run build:tsc",
    "build:debug": "esbuild --bundle src/index.js --format=esm --external:cloudflare:workers --external:node:buffer --external:node:events --external:node:async_hooks --external:node:util --external:node:process --external:node:fs --external:node:path --external:node:crypto --external:node:assert --external:node:os --external:node:url --outfile=dist/worker.mjs",
    "build:tsc": "tsc --build",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "ucan",
    "kms",
    "web3.storage",
    "encryption"
  ],
  "author": "Storacha Team",
  "license": "Apache-2.0 OR MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250715.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.14",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "c8": "^10.1.3",
    "chai": "^5.2.1",
    "esbuild": "^0.25.6",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.0.1",
    "mocha": "^11.7.1",
    "prettier": "^3.1.0",
    "sinon": "^21.0.0",
    "standard": "^17.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wrangler": "^4.25.0"
  },
  "dependencies": {
    "@ipld/car": "^5.4.2",
    "@ipld/dag-cbor": "^9.2.4",
    "@storacha/capabilities": "1.8.0",
    "@storacha/client": "^1.7.6",
    "@ucanto/client": "9.0.1",
    "@ucanto/core": "10.4.0",
    "@ucanto/interface": "10.3.0",
    "@ucanto/principal": "9.0.2",
    "@ucanto/server": "10.2.0",
    "@ucanto/transport": "9.2.0",
    "@ucanto/validator": "9.0.3",
    "crc-32": "^1.2.2",
    "multiformats": "^13.3.7",
    "p-retry": "^6.2.1",
    "zod": "^4.0.5"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
